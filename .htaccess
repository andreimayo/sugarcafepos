# Enable rewrite engine and set options
Options +FollowSymLinks
RewriteEngine On

# Allow CORS for development
Header set Access-Control-Allow-Origin "http://localhost:5173"
Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With"
Header set Access-Control-Allow-Credentials "true"

# Handle preflight OPTIONS requests
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Redirect all requests to the API endpoints to their respective PHP files
RewriteRule ^api/auth/login$ api/auth/login.php [L,QSA]
RewriteRule ^api/menu-items$ api/menu-items.php [L,QSA]
RewriteRule ^api/orders$ api/orders.php [L,QSA]
RewriteRule ^api/view_orders$ api/view_orders.php [L,QSA]
RewriteRule ^api/dashboard$ api/dashboard.php [L,QSA]
RewriteRule ^api/manage$ api/manage.php [L,QSA]

# If requested resource exists as a file or directory, serve it directly
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Otherwise, redirect to index.php
RewriteRule ^(.*)$ index.php [L,QSA]

# Protect sensitive files
<FilesMatch "^(\.htaccess|\.htpasswd|\.ini|\.log|\.inc|\.json)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Set default character encoding
AddDefaultCharset UTF-8

# Disable directory listing
Options -Indexes

# Set proper MIME types
AddType application/json .json
AddType text/javascript .js
AddType text/css .css

# Enable compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Set security headers
Header set X-Content-Type-Options "nosniff"
Header set X-XSS-Protection "1; mode=block"
Header set X-Frame-Options "SAMEORIGIN"
Header set Referrer-Policy "strict-origin-when-cross-origin"